<header class="bg-success py-3">
  <div class="container px-4 px-lg-5 my-5">
      <div class="text-center text-white">
          <h1 class="display-4 fw-bolder">みんなの移住体験談</h1>
          <p class="lead fw-normal text-white-50 mb-0 mt-5">あなたの体験談を教えて下さい</p>
          <% if user_signed_in? %>
            <%= link_to "投稿する", new_normal_path(@normal), class: "btn btn-warning mt-3" %>
          <% else %>
            <%= link_to 'ログイン', new_user_session_path ,class: "btn btn-warning" %>
          <% end %>
      </div>
  </div>
</header>

<section class="section">
  <div class="container mt-5">
    <% @normals.each do |normal| %>
    <table class="table table-striped table-bordered">
      <% if user_signed_in? %>
        <caption><%= link_to "投稿者情報を確認", user_path(normal.user) %></caption>
      <% end %>
      <tr>
      <th>ユーザー名</th>
      <th>以前のお住まいは？</th>
      <th>現在のお住まいは？</th>
      <th>移住の経緯</th>
      <th>投稿時間</th>
      </tr>
      <tr>
      <td><%= normal.user.username %></td>
      <td><%= normal.before_address %></td>
      <td><%= normal.current_address %></td>
      <td><%= link_to "体験談を詳しく見る", normal_path(normal) %></td>
      <td><%= normal.created_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>
    </table>
  </div>
  <div class="mx-auto">
    <%=paginate @normals, theme: 'twitter-bootstrap-4'%>
  </div>
</section>