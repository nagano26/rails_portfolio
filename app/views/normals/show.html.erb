<header class="bg-success py-2">
  <div class="container px-4 px-lg-5 my-5">
      <div class="text-white">
          <h2 class="display-4 fw-bolder">みんなの移住体験談</h2>
      </div>
  </div>
</header>

<div class="py-2 bg-light">
    <div class="container px-2 my-5">
        <div class="row gx-5">
            <div class="card shadow p-5  mx-auto mt-5 col-10">
                <table class="table mt-5">
                    <h2 class="form-area-title"><%=@normal.user.username %>さんの体験談</h2>
                    <tr><th>・移住前のお住まい</th></tr>
                    <tr><td><%= @normal.before_address %></td></tr>
                    <tr><th>・移住前のお住まい</th></tr>
                    <tr><td><%= @normal.current_address %></td></tr>
                    <tr><th>・移住までの経緯</th></tr>
                    <tr><td><%= @normal.trigger %></td></tr>
                    <tr><th>・移住までの準備</th></tr>
                    <tr><td><%= @normal.preparation%></td></tr>
                </table>
            </div>
        </div>
    </div>
</div>

<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4 mb-3">
                <%= attachment_image_tag @normal.user, :profile_image , fallback: "no-image.png" ,:size =>'300x400'%>
            </div>
            <div class="col-md-8">
                <h3>投稿者：<%=@normal.user.username %>さん</h3>
            <p class="mt-4"><%= @normal.user.profile %></p>
            <% if user_signed_in? %>
                <%= link_to "投稿者情報を確認", user_path(@normal.user),class: "btn btn-outline-primary mb-3" %>
            <% else %>
                <%= link_to 'ログインして投稿者を確認する', new_user_session_path ,class: "btn btn-outline-primary mb-3" %>
            <% end %>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container px-2 my-5">
        <div class="row">
            <% if user_signed_in? %>
                <div class="comment col-md-4">
                    <h3>コメントする</h3>
                    <%= render partial: 'comments/form', locals: { comment: @comment, normal: @normal } %>
                </div>
            <% end %>
            <div class="comment col-md-4 mb-3">
                <%= @comments.count %>件コメント
                <div>
                    <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                        コメントを見る
                    </a>
                </div>
                <%= render partial: 'comments/index', locals: { comments: @comments } %>
            </div>
        </div>
    </div>
</section>


