<nav class="navbar navbar-light navbar-dark bg-dark">
    <a class="navbar-brand">お住まいの登録 </a>
</nav>

<%= render "shared/error", obj: @normal %>

<section class="section">
  <div class="container mt-5">
  <br>
    <h1>編集画面</h1>
  </br>
    <div class="row">
      <div class="col-10">
        <%= form_for @normal do |f| %>
          <div class="form-group">
            <%= f.label :before_address, "・", class: "label" %>
            <%= f.text_field :before_address, class: "form-control" ,placeholder:"鈴木　花子"%>
          </div>
          
          <div class="form-group">
            <%= f.label :current_address, "・", class: "label" %>
            <%= f.text_field :current_address, class: "form-control" ,placeholder:"email@email.co.jp" %>
          </div>
          
          <div class="form-group">
            <%= f.label :trigger, "・", class: "label" %>
            <%= f.text_area :trigger, class: "form-control" ,placeholder:"こんにちは" %>
          </div>
          
          <div class="form-group">
          <%= f.label :preparation, "・", class: "label" %>
          <%= f.text_area :preparation, class: "form-control" %>
          </div>
          
          <%= f.submit '更新', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

