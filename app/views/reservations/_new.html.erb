<%= render "shared/error", obj: @reservation %>
    <%=form_with model: @reservation do |f| %>
        <table class="table table-striped">
            <h3 class="title">予約画面</h3>
            <tr><th><%= f.label :start_at, "チェックイン日" %></th></tr>
            <tr><td><%= f.date_field :start_at %></td></tr>
            <tr><th><%= f.label :end_at, "チェックアウト日" %></th></tr>
            <tr><td><%= f.date_field :end_at %></td></tr>
            <tr><th><%= f.label :number_people, "人数" %></th></tr>
            <tr><td><%= f.number_field :number_people %></td></tr>
            <tr>
        </table>
        <% if user_signed_in? %>
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.hidden_field :room_id, :value => @room.id %>
            <%= f.submit '予約する', class: "btn btn-outline-primary mb-3"%>
        <% else %>
            <%= link_to 'ログイン', new_user_session_path ,class: "btn btn-outline-primary mb-3" %>
        <% end %>
    <% end %> 