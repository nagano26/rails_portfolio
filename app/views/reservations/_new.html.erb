<%= render "shared/error", obj: @reservation %>
    <%=form_with model: @reservation, local: true do |f| %>
        <table class="table table-striped">
            <h3 class="title">予約画面</h3>
            <tr><th><%= f.label :start_at, "チェックイン日" %></th></tr>
            <tr><td><%= f.date_field :start_at %></td></tr>
            <tr><th><%= f.label :end_at, "チェックアウト日" %></th></tr>
            <tr><td><%= f.date_field :end_at %></td></tr>
            <tr><th><%= f.label :number_people, "人数" %></th></tr>
            <tr><td><%= f.number_field :number_people %></td></tr>
            <tr>
        </table>
        <% if user_signed_in? %>
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.hidden_field :room_id, :value => @room.id %>
            <button type="button" class="btn btn-outline-primary mb-3" data-toggle="modal" data-target="#testModal">予約する</button>
           
            <!-- ボタン・リンククリック後に表示される画面の内容 -->
            <div class="modal fade" id="testModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4>予約確認画面</h4>
                  </div>
                  <div class="modal-body">
                    <label>入力した内容で予約してよろしいでしょうか？</label>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
                    <%= f.submit '予約する', class: "btn btn-outline-primary"%>
                  </div>
                </div>
              </div>
            </div>
        <% else %>
            <%= link_to 'ログイン', new_user_session_path ,class: "btn btn-outline-primary mb-3" %>
        <% end %>
    <% end %> 