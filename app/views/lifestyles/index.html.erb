<header class="bg-success py-3">
  <div class="container px-4 px-lg-5 my-5">
      <div class="text-center text-white">
          <h1 class="display-4 fw-bolder">みんなの移住体験談</h1>
          <p class="lead fw-normal text-white-50 mb-0 mt-5">あなたの体験談を教えて下さい</p>
          <% if user_signed_in? %>
            <%= link_to "投稿する", new_lifestyle_path(@lifestyle), class: "btn btn-warning mt-3" %>
          <% else %>
            <%= link_to 'ログイン', new_user_session_path ,class: "btn btn-warning" %>
          <% end %>
      </div>
  </div>
</header>

<section class="section">
  <div class="container mt-5">
    <% @lifestyles.each do |lifestyle| %>
    <table class="table table-striped table-bordered">
      <caption>"ユーザ情報を確認する"</caption>
      <tr>
      <th>ユーザー名</th>
      <th>移住先の一ヶ月の生活費</th>
      <th>利用した国の制度</th>
      <th>投稿時間</th>
      </tr>
      <tr>
      <td><%= lifestyle.user.username %></td>
      <td><%= lifestyle.price_life %></td>
      <td><%= link_to "体験談を詳しく見る", lifestyle_path(lifestyle) %></td>
      <td><%= lifestyle.created_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>
    </table>
  </div>
  <%=paginate @lifestyles, theme: 'twitter-bootstrap-4' %>
</section>
