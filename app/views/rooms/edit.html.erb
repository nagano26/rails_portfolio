  <a class="navbar-brand">お住まいの登録 </a>
</nav>

<%= render "shared/error", obj: @room %>

<section class="section">
  <div class="container mt-5">
  <br>
    <h1>お部屋の編集画面</h1>
  </br>
    <div class="row mb-5">
      <div class="col-10">
        <%= form_for @room do |f| %>
          <div class="form-group">
            <%= f.label :room_name, "部屋の名前", class: "label" %>
            <%= f.text_field :room_name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :room_body, "部屋の紹介", class: "label" %>
            <%= f.text_area :room_body, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :room_price, "部屋の料金", class: "label" %>
            <%= f.text_field :room_price, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :address, "住所", class: "label" %>
            <%= f.text_field :address, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :room_image, "部屋の写真", class: "label" %>
            <%= f.attachment_field :room_image, class: "form-control-file" %>
          </div>

          <%= f.submit '更新する', class: "button is-success btn btn-primary mt-4" %>
        <% end %>
        <div>
          <button type="button" class="btn btn-outline-primary mt-3" data-toggle="modal" data-target="#testModal<%= @room.id %>">削除する</button>
        </div>
        <div class="modal fade" id="testModal<%= @room.id %>" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4>削除確認画面</h4>
              </div>
              <div class="modal-body">
                <label>データを削除しますか？</label>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
                <%= button_to "削除", room_path(@room), method: :delete, class: "btn btn-outline-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
