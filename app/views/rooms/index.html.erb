<header class="bg-success py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder">田舎で暮らそう</h1>
      <p class="lead fw-normal text-white-50 mb-0">田舎と都会を個人で繋ぐ</p>
      <div class="search form mt-3">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :area, value: @area, class: "form-control mb-3", :placeholder => "エリア" %>
        <% end %>
        <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword, class: "form-control ", :placeholder => "キーワード" %>
        <% end %>
      </div>
    </div>
  </div>
</header>

<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <h1 class="subtitle">現在の投稿数<%=@rooms.count %>件</h1>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @rooms.each do |room| %>
        <div class="col mb-5">
          <div class="card h-100">
            <div class="img-container">
              <%= link_to room_path(room) do %>
                <%= attachment_image_tag room, :room_image, fallback: "no-image.png" %>
              <% end %>
            </div>
            <div class="card-body p-4">
              <div class="text-center">
                <h5 class="fw-bolder"><%=room.room_name %></h5>
                <h6>宿泊料：¥<%= room.room_price %>/日</h6>
                <h6>住所：<%= room.address %></h6>
                <%= render 'favorites/favorite', room: room %>
              </div>
            </div>
          </div>          
        </div>
      <% end %>
    </div>
  </div>
</section>
