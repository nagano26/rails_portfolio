<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>ログイン画面</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "mt-5" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-5" %>
        </div>
      
        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-5" %>
        </div>
        <div>
          <%= f.submit "ログイン", class: "btn btn-primary mb-5" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>