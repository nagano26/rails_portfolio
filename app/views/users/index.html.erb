<nav class="navbar navbar-light navbar-dark bg-dark">
  <a class="navbar-brand">お住まいの登録 </a>
</nav>

<section class="section">
  <div class="container mt-5">
    <h1 class="title">プロフィール</h1>
    <div class="row">
      <div class="col-12">
        <table class="table">
          <tr><%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", class: "profile_image mb-4" %></tr>
          <tr><th>・ユーザー名</th></tr>
          <tr><td><%= @user.username %></td></tr>
          <tr><th>・あなたのメールアドレス</th></tr>
          <tr><td><%= @user.email %></td></tr>
          <tr><th>・紹介文</th></tr>
          <tr><td><%= simple_format @user.profile %></td></tr>
        <table>
      </div>
      <%= link_to '編集', edit_user_path(@user), class: "btn btn-outline-primary mb-3"%>
    </div>
  </div>
</section>

<section class="section">
  <div class="container mt-4">
    <h2 class="title">過去の投稿欄</h2>
      <div class="count">現在のあなたの投稿数：<%= @user.rooms.count %></div> 
    <div class="columns is-multiline">
      <% @user.rooms.each do |room| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image">
                <%= link_to room_path(room) do %>
                  <%= attachment_image_tag room, :room_image, fallback: "no-image.png" %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <%= link_to room_path(room), class: "panel-block" do %>
                    <span class="panel-icon">
                      <i class="fas fa-book" aria-hidden="true"></i>
                    </span>
                    このレシピを見る
                  <% end %>
                  <% if @user.id == current_user.id %>
                    <%= link_to edit_room_path(room), class: "panel-block" do %>
                      <span class="panel-icon">
                        <i class="fas fa-edit"></i>
                      </span>
                      このレシピを編集する
                    <% end %>
                    <%= button_to room_path(room), method: :delete, data: {confirm: "削除しますか？"}, class: "panel-block" do %>
                      このレシピを削除する
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
