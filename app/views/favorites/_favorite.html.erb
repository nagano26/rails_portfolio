<% if user_signed_in? %>
  <% if current_user.already_favorited?(room) %>
    <%= button_to room_favorites_path(room), method: :delete do %>
      <i class="fas fa-heart btn-outline-primary"><%= room.favorites.count %></i>
    <% end %>
  <% else %>
    <%= button_to room_favorites_path(room), method: :post do %>
      <i class="fas fa-heart"><%= room.favorites.count %></i>
    <% end %>
  <% end %>
<% end %>
